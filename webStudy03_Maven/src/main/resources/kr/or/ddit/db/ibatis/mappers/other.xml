<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="Other">
	<select id="selectLprodList" resultClass="hashmap">
		SELECT LPROD_GU, LPROD_NM
		FROM LPROD
	</select>
	<select id="selectBuyerList" parameterClass="String" resultClass="buyerVO">
		SELECT BUYER_ID, BUYER_NAME, BUYER_LGU
		FROM BUYER
		<dynamic prepend=" WHERE ">
			<isParameterPresent>
				BUYER_LGU = #BUYER_LGU#
			</isParameterPresent>
		</dynamic>
	</select>
	<select id="selectLprod" resultClass="string">
		select lprod_gu from lprod
	</select>
	<select id="selectBuyer" resultClass="string">
		select buyer_id from buyer
	</select>
</sqlMap>
